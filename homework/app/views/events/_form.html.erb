<%= form_for (@event) do |f| %>
	<% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>

  </div>
  <div class="field">
    <%= f.label "Date/Time"%> 
   <br />


    <%= f.date_select 	:datetime, :order => [:year, :month, :day], 
    					:start_year => 2010, 
    					:end_year => Time.now.year
    %>
  
    <%= f.time_select 	:datetime, 
    					:order => [:time], 
    					:ampm => true 
    %>
  </div>

  <div class="field">
    <%= f.label :venue_id %><br />
    <%= f.collection_select :venue_id,
                            Venue.all,
                            :id,
                            :name %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
